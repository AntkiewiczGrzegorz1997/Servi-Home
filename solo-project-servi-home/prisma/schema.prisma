generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  username   String @unique
  email    String @unique
  password String 
  createdAt DateTime @default(now())
  furniture Furniture[] 
  rug Rug[]
  table Table[]
}

model Furniture {
  id String @id @default(uuid())
  seats String
  condition String 
  userid String
  user User @relation(fields: [userid], references: [id])
}

model Rug {
  id String @id @default(uuid())
  seats String
  condition String 
  userid String
  user User @relation(fields: [userid], references: [id])
}

model Table {
  id String @id @default(uuid())
  seats String
  condition String 
  userid String
  user User @relation(fields: [userid], references: [id])
}

model Cleaner {
  id String @id @default(uuid())
  username   String @unique
  email    String @unique
  password String
  createdAt DateTime @default(now())
}

model Review {
  id String @id @default(uuid())
  title String
  name String
  content String
  createdAt DateTime @default(now())
}